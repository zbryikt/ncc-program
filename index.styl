@import vars
@import basic

html,body
  width: 100%
  height: 100%
  margin: 0
  padding: 0

#root
  max-width: 1280px
  margin: 10px auto 30px
  padding: 20px
  text-align: center

.channels
  position: relative

.channel
  width: 200px
  position: absolute
  border: 1px solid #ccc
  box-shadow: 0 1px 2px rgba(0,0,0,0.3)
  border-radius: 3px
  background: #fff
  padding: 10px
.seg
  border: 1px solid #ccc
  margin-bottom: 5px
  .time
    background: #eee
    border-bottom: 1px solid #ddd
    font-size: 12px
